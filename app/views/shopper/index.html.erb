<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= form_tag show_product_shopper_index_path, method: :get, class: 'search_bar' do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search" %>
	<%= submit_tag "Search", name: nil %>
<% end %>

<h1>Product Catalog</h1>

<% @products.each do |product| %>
<div class="entry">
	<%= image_tag(product.image, class: 'img') %>
	<h3><%= product.name %></h3>
	<div class="price_line">
		<%= sanitize(product.description) %><br>
		<span class="price"><%= product.price %></span>
	</div>
	<%= button_to 'Add to Cart', lineitems_path(product_id: product), class: 'add_to_cart', remote:true %>
</div>
<% end %>
<%= link_to 'Back', shopper_path, id: 'back_shopper' %>